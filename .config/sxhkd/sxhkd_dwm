##---------- Applications ----------##

# Brave browser
super + w 
  brave

# Thunar
super + n 
  thunar 

# Firefox
super + alt + w
  firefox 

# Alacritty Terminal
ctrl + alt + t
	alacritty

# LF Manager
super + r
  alacritty -e lfrun 

# Notes
super + shift + n
  alacritty -e nvim ~/vimwiki/index.wiki

# PulseAudio Volume Mixer
super + F2
  pavucontrol -t 3

# HTop
super + F1
  st -e htop

##---------- Rofi ----------##

# Rofi Drun
super + d
	rofi -modi drun -show drun -show-icons -terminal alacritty -font "JetBrainsMono Nerd Font Bold 10"

# Windows Switcher
super + shift + w 
	rofi -modi window -show window -show-icons -font "JetBrainsMono Nerd Font Bold 10"

# Power Menu
super + shift + BackSpace
     ~/.local/bin/powermenu.sh

# Config Editor
super + F4
    ~/.local/bin/dmconf.sh

# Clipmenu
super + c
    clipmenu

##---------- Special Hotkeys ----------##

# Sxhkd Reload
super + Escape
	pkill -USR1 -x sxhkd

# Lockscreen
ctrl + alt + l
    ~/.local/bin/i3lock-fancy/i3lock-fancy.sh

# Multimedia keys
XF86AudioRaiseVolume
    pamixer -i 5

XF86AudioLowerVolume
    pamixer -d 5

XF86AudioMute
    pamixer -t

# Screenshot
Print
  scrot ~/Pictures/Screenshot-$(date +%F_%T).png

super+Print
  ~/.local/bin/screenshot.sh

##---------- EOF ----------##		
